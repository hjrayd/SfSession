{% extends 'base.html.twig' %}

{% block title %}Details of sessions{% endblock %}

{% block body %}
    <h1> Details of sessions</h1>

    {# Trainees : <a href="{{ path('show_trainee', {'id':session.trainee.id}) }}"> {{ session.trainee }} </a> <br> #}


    

    <h2>Program: </h2> <br>

    Beginning date : {{ session.beginningDate}} <br>
    Ending date : {{ session.endingDate}} <br>
    Number of places : {{ session.numberPlace}} <br>

   
    Modules: <br>
    {% for program in session.programs %}

    {{ program.module }} - {{ program.module.Category }} - {{ program.nbDays }} days <br>

    {% endfor %}

    <h2>Trainees registered in this session :</h2> <br>

    {% for trainee in session.trainees %} 

    <a href="{{ path('show_trainee', {'id':trainee.id} )}}">{{ trainee }}</a>  <br> 

    {% endfor %}



    
{% endblock %}
