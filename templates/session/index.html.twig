{% extends 'base.html.twig' %}

{% block title %}List of sessions{% endblock %}

{% block body %}


    <h1> List of sessions</h1>

        <h2>Upcoming Session :</h2>
            {% for session in statutsSession['upcoming'] %}
                <li> {{ session }}  ( {{ session.beginningDate }} - {{ session.endingDate }} ) </li>
            {% endfor %}
        <h2>Current Session :</h2>
            {% for session in statutsSession['currently'] %}
                <li> {{ session }} ( {{ session.beginningDate }} - {{ session.endingDate }} ) </li>
            {% endfor %}

        <h2>Finished Session :</h2>
            {% for session in statutsSession['finished'] %}
                <li> {{ session }} ( {{ session.beginningDate }} - {{ session.endingDate }} )</li>
            {% endfor %}

